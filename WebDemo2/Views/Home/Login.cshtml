
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



<div class="offset-5">
    <h2>Login</h2>
    <form method="post" action="~/Home/CheckLogin">
        <div class="form-group">
            <label>UserName</label>
            <input type="text" placeholder="username" name="username" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" placeholder="passworld" name="passworld" />
        </div>
        <div class="form-group">
            <table>UserType</table>
            <input type="radio" data-role="radio" data-caption="Person" name="isPOrA" value="Person" checked>
            <input type="radio" data-role="radio" data-caption="Admin" name="isPOrA" value="Admin">
        </div>
        <div class="form-group">
            <input type="submit" class="button success" value="Submit" />
            <input type="reset" class="button yellow" value="Cancel">
        </div>
    </form>
</div>